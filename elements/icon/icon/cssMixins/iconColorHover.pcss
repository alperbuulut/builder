.vce-icon--style {
  &--icon-color-hover-$selector {

    &.vce-features--style {
      &-none {
        .vce-icon-container {
          &:hover {
            color: $iconColorHover;
          }
        }
      }

      &-filled {
        &-circle, &-rounded, &-square, &-diamond, &-hexagon {
          .vce-features--icon {
            &:hover {
              .vce-icon-container {
                color: $iconColorHover;
              }
            }
          }
        }
      }

      &-outlined {
        &-circle, &-rounded, &-square, &-diamond, &-hexagon, &-underlined {
          .vce-features--icon {
            &:hover {
              .vce-icon-container {
                color: $iconColorHover;
              }
            }
          }
        }
      }
    }
  }
}